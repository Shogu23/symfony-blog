{% extends 'base.html.twig' %}

{% block title %}Ajouter un article!
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-7">
				<h1 class="text-center">Ajouter un article !</h1>

				{% for level, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ level }}">
							{{ message|raw }}
						</div>
					{% endfor %}
				{% endfor %}

				<form method="post" enctype="multipart/form-data">
					<div class="form-row mb-3">
						<label for="title" class="col-form-label col-4">Titre</label>
						<div class="col-8">
							<input type="text" name="title" id="title" class="form-control" placeholder="Votre titre">
						</div>
					</div>
					<div class="form-row mb-3">
						<label for="content" class="col-form-label col-4">Contenu</label>
						<div class="col-8">
							<textarea name="content" id="content" class="form-control" placeholder="Dites nous en plus..."></textarea>
						</div>
					</div>
					<div class="form-row mb-3">
						<label for="add" class="col-form-label col-4">Ajouter une image</label>
						<div class="custom-file col-8">
							<label class="custom-file-label" for="image">Add</label>
							<input type="file" class="custom-file-input" name="image" id="image">
						</div>
					</div>

					<div class="text-center">
						<button type="submit" class="btn btn-dark">Enregistrer</button>
					</div>

				</form>
			</div>
		</div>
	</div>


{% endblock %}
