{% extends 'base.html.twig' %}

{% block title %}Votre Article {% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-7">
                <h1>Votre article</h1>

			    <h3>{{ article.title }}</h5>
			    <p>{{ article.content|nl2br }}</p>

                <p class="small text-right text-muted">Publié le {{ article.createdAt|date('d-m-Y H:i') }} - <a href="{{ path('article_update', {id_article: article.id}) }}">Modifier l'article</a> - <a href="{{ path('article_delete', {id_article: article.id}) }}">Supprimer l'article</a></p>

                {% if article.picture is not empty %}
                {# La fonction asset() en twig va automatiquement vous emmener au répertoire "public" #}
                    <img src="{{ asset(article.picture) }}" alt="image article"
                {% endif %}

            </div>

		</div>
	</div>

{% endblock %}
