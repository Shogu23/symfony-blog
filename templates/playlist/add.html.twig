{% extends 'base.html.twig' %}

{% block title %}Ajouter une playlist!{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-7">
				<h1 class="text-center">Ajouter une playlist !</h1>

				{% for level, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ level }}">
							{{ message|raw }}
						</div>
					{% endfor %}
				{% endfor %}

				<form method="post">
					<div class="form-row mb-3">
						<label for="name" class="col-form-label col-4">Titre de la playlist</label>
						<div class="col-8">
							<input type="text" name="name" id="name" class="form-control" placeholder="Votre playlist">
						</div>
					</div>
					<div class="text-center">
						<button type="submit" class="btn btn-dark">Enregistrer</button>
					</div>

				</form>
			</div>
		</div>
	</div>


{% endblock %}
